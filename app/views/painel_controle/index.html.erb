        <div class="stat-info">
          <h3 class="stat-title">Funcion√°rios</h3>
          <p class="stat-subtitle">Total cadastrados</p>
        </div>
      </div>
      <div class="stat-value"><%= @total_funcionarios || 0 %></div>
      <div class="stat-trend">
        <span class="trend-positive">+2 este m√™s</span>
      </div>
    </div>

    <!-- Chamados Ativos -->
    <div class="stat-card">
      <div class="stat-header">
        <div class="stat-icon">üé´</div>
        <div class="stat-info">
          <h3 class="stat-title">Chamados Ativos</h3>
          <p class="stat-subtitle">Em aberto/andamento</p>
        </div>
      </div>
