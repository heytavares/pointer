  </div>
</div>

<!-- Se√ß√£o de Chamados Recentes -->
<div class="dashboard-section">
  <div class="section-header">
    <h2 class="section-title">üé´ Chamados Recentes</h2>
    <%= link_to "Ver Todos", chamados_path, class: "btn-view-all" %>
  </div>

  <% if @chamados_recentes.any? %>
    <div class="chamados-grid">
      <% @chamados_recentes.each do |chamado| %>
        <div class="chamado-card <%= chamado.prioridade %>">
          <div class="chamado-header">
            <h3 class="chamado-title"><%= chamado.titulo %></h3>
            <span class="chamado-priority <%= chamado.prioridade %>">
              <%= chamado.prioridade %>
            </span>
          </div>
          
          <p class="chamado-descricao"><%= chamado.descricao.truncate(100) %></p>
          
          <div class="chamado-meta">
            <div class="meta-item">
              <span class="meta-label">Por:</span>
              <span class="meta-value"><%= chamado.funcionario.nome %></span>
            </div>
            <div class="meta-item">
              <span class="meta-label">Categoria:</span>
              <span class="meta-value"><%= chamado.categoria %></span>
            </div>
            <div class="meta-item">
              <span class="meta-label">Status:</span>
              <span class="meta-value status-<%= chamado.status %>"><%= chamado.status %></span>
            </div>
            <% if chamado.data_vencimento %>
              <div class="meta-item">
                <span class="meta-label">Vencimento:</span>
                <span class="meta-value <%= 'vencido' if chamado.atrasado? %>">
                  <%= l(chamado.data_vencimento, format: :short) %>
                </span>
              </div>
            <% end %>
          </div>
          
          <div class="chamado-actions">
            <%= link_to "Ver Detalhes", chamado_path(chamado), class: "btn-details" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <div class="empty-icon">üìã</div>
      <h3>Nenhum chamado encontrado</h3>
      <p>N√£o h√° chamados recentes para exibir.</p>
      <%= link_to "Criar Primeiro Chamado", new_chamado_path, class: "btn-primary" %>
    </div>
  <% end %>
</div>

<style>
/* Se√ß√µes do Dashboard */
.dashboard-section {
  margin-bottom: 2rem;
}

.section-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 1.5rem;
}

.section-header {
