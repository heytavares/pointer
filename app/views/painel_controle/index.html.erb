          <span class="trend-negative"><%= @chamados_atrasados %> atrasados</span>
        <% else %>
          <span class="trend-positive">No prazo</span>
        <% end %>
      </div>
    </div>

    <!-- Total de Itens no Estoque -->
    <div class="stat-card">
      <div class="stat-header">
        <div class="stat-icon">üì¶</div>
        <div class="stat-info">
          <h3 class="stat-title">Itens no Estoque</h3>
          <p class="stat-subtitle">Total dispon√≠vel</p>
        </div>
      </div>
      <div class="stat-value"><%= @total_itens_estoque || 0 %></div>
      <div class="stat-trend">
        <% if @itens_estoque_baixo.to_i > 0 %>
          <span class="trend-negative"><%= @itens_estoque_baixo %> com estoque baixo</span>
        <% else %>
          <span class="trend-positive">Estoque ok</span>
        <% end %>
      </div>
    </div>

    <!-- Chamados por Prioridade -->
    <div class="stat-card">
      <div class="stat-header">
        <div class="stat-icon">‚ö†Ô∏è</div>
        <div class="stat-info">
          <h3 class="stat-title">Prioridade Alta</h3>
          <p class="stat-subtitle">Chamados urgentes</p>
        </div>
      </div>
