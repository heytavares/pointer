<%= form_with(model: chamado, class: "contents") do |form| %>
  <% if chamado.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(chamado.errors.count, "error") %> prohibited this chamado from being saved:</h2>

      <ul class="list-disc ml-6">
        <% chamado.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :titulo %>
    <%= form.text_field :titulo, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": chamado.errors[:titulo].none?, "border-red-400 focus:outline-red-600": chamado.errors[:titulo].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :descricao %>
    <%= form.textarea :descricao, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": chamado.errors[:descricao].none?, "border-red-400 focus:outline-red-600": chamado.errors[:descricao].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :funcionario_id %>
    <%= form.text_field :funcionario_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": chamado.errors[:funcionario_id].none?, "border-red-400 focus:outline-red-600": chamado.errors[:funcionario_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :categoria %>
    <%= form.text_field :categoria, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": chamado.errors[:categoria].none?, "border-red-400 focus:outline-red-600": chamado.errors[:categoria].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :prioridade %>
    <%= form.text_field :prioridade, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": chamado.errors[:prioridade].none?, "border-red-400 focus:outline-red-600": chamado.errors[:prioridade].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.text_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": chamado.errors[:status].none?, "border-red-400 focus:outline-red-600": chamado.errors[:status].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :data_vencimento %>
    <%= form.date_field :data_vencimento, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": chamado.errors[:data_vencimento].none?, "border-red-400 focus:outline-red-600": chamado.errors[:data_vencimento].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
