<% content_for :page_title, "Novo Chamado" %>
<% content_for :page_subtitle, "Criar um novo chamado no sistema" %>

<style>
  .form-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background: #1e293b;
    min-height: 100vh;
  }

  .form-title {
    color: #f8fafc;
    margin-bottom: 30px;
    font-size: 1.8rem;
    font-weight: 600;
    text-align: center;
  }

  .form-card {
    background: #2a374a;
    border: 1px solid #374151;
    border-radius: 12px;
    padding: 30px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    color: white;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-label {
    display: block;
    font-weight: 600;
    margin-bottom: 8px;
    color: #f1f5f9;
    font-size: 0.9rem;
  }

  .form-input, .form-select, .form-textarea {
    width: 100%;
    padding: 12px;
    border: 1px solid #4b5563;
    border-radius: 8px;
    font-size: 1rem;
    font-family: inherit;
    transition: all 0.2s ease;
    background: #374151;
    color: white;
  }

  .form-input:focus, .form-select:focus, .form-textarea:focus {
    outline: none;
    border-color: #3b82f6;
    box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
  }

  .form-textarea {
    resize: vertical;
    min-height: 100px;
  }

  .form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
  }

  .error-alert {
    background: #7f1d1d;
    border: 1px solid #991b1b;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 20px;
    color: #fecaca;
  }

  .error-title {
    margin: 0 0 10px 0;
    font-size: 1rem;
  }

  .error-list {
    margin: 0;
    padding-left: 20px;
  }

  .error-item {
    font-size: 0.9rem;
  }

  .form-actions {
    display: flex;
    gap: 12px;
    margin-top: 25px;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px 24px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  .btn-primary {
    background: #3b82f6;
    color: white;
  }

  .btn-primary:hover {
    background: #2563eb;
    transform: translateY(-1px);
  }

  .btn-secondary {
    background: #6b7280;
    color: white;
  }

  .btn-secondary:hover {
    background: #4b5563;
    transform: translateY(-1px);
  }

  .required-field::after {
    content: " *";
    color: #ef4444;
  }

  @media (max-width: 768px) {
    .form-grid {
      grid-template-columns: 1fr;
    }
    
    .form-actions {
      flex-direction: column;
    }
  }
</style>

<div class="form-container">
  <h1 class="form-title">üìù Criar Novo Chamado</h1>

  <div class="form-card">
    <%= form_with(model: @chamado, local: true) do |form| %>
      <% if @chamado.errors.any? %>
        <div class="error-alert">
          <h2 class="error-title">Erros encontrados:</h2>
          <ul class="error-list">
            <% @chamado.errors.full_messages.each do |error| %>
              <li class="error-item"><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :titulo, "T√≠tulo", class: "form-label required-field" %>
        <%= form.text_field :titulo, class: "form-input", placeholder: "Digite o t√≠tulo do chamado", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :descricao, "Descri√ß√£o", class: "form-label required-field" %>
        <%= form.text_area :descricao, rows: 4, class: "form-textarea", placeholder: "Descreva o problema ou solicita√ß√£o", required: true %>
      </div>

      <div class="form-group">
        <%= form.label :funcionario_id, "Funcion√°rio Respons√°vel", class: "form-label required-field" %>
        <%= form.collection_select :funcionario_id, 
              Funcionario.all, 
              :id, 
              :nome, 
              { include_blank: "Selecione um funcion√°rio..." }, 
              { class: "form-select", required: true } %>
      </div>

      <div class="form-grid">
        <div class="form-group">
          <%= form.label :categoria, "Categoria", class: "form-label required-field" %>
          <%= form.select :categoria, 
                options_for_select([
                  ['T√©cnico', 'tecnico'],
                  ['RH', 'rh'],
                  ['Financeiro', 'financeiro'],
                  ['Estoque', 'estoque'],
                  ['Outros', 'outros']
                ]), 
                { include_blank: "Selecione..." }, 
                { class: "form-select", required: true } %>
        </div>

        <div class="form-group">
          <%= form.label :prioridade, "Prioridade", class: "form-label required-field" %>
          <%= form.select :prioridade, 
                options_for_select([
                  ['Baixa', 'baixa'],
                  ['M√©dia', 'media'],
                  ['Alta', 'alta'],
                  ['Urgente', 'urgente']
                ]), 
                { include_blank: "Selecione..." }, 
                { class: "form-select", required: true } %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :data_vencimento, "Data de Vencimento", class: "form-label" %>
        <%= form.date_field :data_vencimento, class: "form-input", min: Date.current %>
      </div>

      <%= form.hidden_field :status, value: "aberto" %>

      <div class="form-actions">
        <%= form.submit "Criar Chamado", class: "btn btn-primary" %>
        <%= link_to "Cancelar", chamados_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>